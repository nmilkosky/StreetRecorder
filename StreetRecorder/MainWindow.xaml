<Window x:Class="StreetRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <Button Name="BrowseFolder" Click="BrowseFolder_Click" Content="Browse..." HorizontalAlignment="Left" Height="20" Margin="146,10,0,0" VerticalAlignment="Top" Width="96" />
        <TextBox HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding FolderPath}" VerticalAlignment="Top" Width="131" />
    </Grid>
</Window>
